<%- include('./partials/header.ejs') %>
<br />
<form
    action="/movies/findByUserID/?"
    method="GET"
    style="padding-bottom: 25px;"
>
    <input type="text" name="UserID" id="UserID" placeholder="Find Movie" />
</form>
<table
    id="example"
    class="table table-striped table-bordered mt-1"
    style="width: 100%;"
>
    <thead class="thead-dark">
        <tr>
            <th>No</th>
            <th>Movie Name</th>
            <th>Genre</th>
            <th>Years</th>
            <th>Created By</th>
        </tr>
    </thead>
    <tbody>
        <% for(let i= 0; i < result.length; i++) { %>
        <tr>
            <td><%= i+1; %></td>
            <td><%= result[i].name %></td>
            <td><%= result[i].genre %></td>
            <td><%= result[i].year %></td>
            <td><%= result[i].UserID %></td>
        </tr>
        <% } %>
    </tbody>
</table>
