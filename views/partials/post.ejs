<button
    type="button"
    class="btn btn-primary"
    data-toggle="modal"
    data-target="#exampleModal"
>
    Add New Movie
</button>

<!-- Modal -->
<div
    class="modal fade"
    id="exampleModal"
    tabindex="-1"
    role="dialog"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Add New Movie
                </h5>
                <button
                    type="button"
                    class="close"
                    data-dismiss="modal"
                    aria-label="Close"
                >
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/recipes/" method="POST">
                    <div class="form-group">
                        <label for="name">Title</label>
                        <input
                            type="name"
                            id="name"
                            name="name"
                            class="form-control"
                            placeholder="Enter Recipe Title"
                        />
                    </div>
                    <div class="form-group">
                        <label for="procedures">years</label>
                        <input
                            type="procedures"
                            id="procedures"
                            name="procedures"
                            class="form-control"
                            placeholder="Enter Procedures"
                        />
                    </div>
                    <div class="form-group">
                        <label for="ingredients">genre</label>
                        <input
                            type="ingredients"
                            id="ingredients"
                            name="ingredients"
                            class="form-control"
                            placeholder="Enter Ingredients"
                        />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">
                        Add Movie
                    </button>
                </form>
            </div>
            <div class="modal-footer">
                <button
                    type="button"
                    class="btn btn-secondary"
                    data-dismiss="modal"
                >
                    Close
                </button>
            </div>
        </div>
    </div>
</div>
